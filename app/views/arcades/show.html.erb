<h3><%= @arcade.name %></h3>
<p><%= @arcade.location %></p>
<p><%= @arcade.owner_name %></p>
<p>Open from: <%= @arcade.open_time - @arcade.close_time %></p>
<p>Open since: <%= @arcade.est_year %>

<% @arcade.games.each do |game| %>
    <h4><%= game.name %><h4>
    <p>Max Players: <%= game.num_players %></p>
    <p>Costs: <%= game.cost %></p>
    <p>In Order: <%= game.working %></p>
    <p>Current Player: <%= game.player_id.username %></p>
    <%= link_to 'Check this game out', game_path(game) %>
    <% if @arcade.owner_name == current_user.username %>
        <%= link_to 'edit game', edit_game_path(game) %>
    <% end %>
<% end %>
