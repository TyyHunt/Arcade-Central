<%= form_for(@arcade) do |f| %>
    <br>
    <%= f.label 'Name of arcade: ' %>
    <%= f.text_field :name %>
    <br>
    <%= f.label 'Where is the arcade located? ' %>
    <%= f.text_field :location %>
    <br>
    <%= f.label 'At what time will your arcade open: ' %>
    <%= f.number_field :open_time %>
    <br>
    <%= f.label 'At what time will your arcade close: ' %>
    <%= f.number_field :close_time %>
    <br>
    <%= f.label 'What year was the acrade established? ' %>
    <%= f.number_field :est_year %>
    <br>
    <%= f.hidden_field :owner_name, :value => current_user.username %>
    <br>
    <%= f.submit %>
<% end %>
