<%= form_for @player do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %>
    <br>
    <%= f.label :age %>
    <%= f.number_field :age %>
    <br>
    <%= f.label :allowance %>
    <%= f.number_field :allowance, :class => 'text_field', :step => 0.25 %>
    <br>
    <%= f.label :create_password %>
    <%= f.text_field :password_digest %>
    <br>

    <%= f.submit %>
  <% end %>