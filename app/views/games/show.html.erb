
<h3><%= @arcade.name %></h3>
<p><%= @arcade.location %></p>
<p><%= @arcade.owner_name %></p>
<p>Open from: <%= @arcade.open_time - @arcade.close_time %></p>
<p>Open since: <%= @arcade.est_year %>

<div>
    <h3><%= @game.name %></h3>
    <p>Number of players: <%= @game.num_players %></p>
    <p>Cost per game: <%= @game.cost %></p>
    <p>Playable: <%= @game.working %></p>
</div>

<% if current_user.username == @game.arcade.owner_name %>
    <%= link_to "Edit your game", edit_player_path(@game) %>
    <%= form_tag player_path(@game.id), method: "delete", data: { confirm: "Pull the plug?" } do %>
        <%= submit_tag "Shut down this game" %>
    <% end %>
<% end %>